<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:timePickerStyle">@style/TimePickerTheme</item>
        <item name="android:datePickerStyle">@style/DatePickerTheme</item>
    </style>

    <style name="SwitchCompatTheme">
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="darkTheme" parent="AppTheme">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:textColorHint">@color/lightGrey</item>
        <item name="android:colorBackground">@color/darkBackground</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:numbersInnerTextColor">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="navButton">@mipmap/menu_icon</item>
        <item name="homeIcon">@mipmap/home_white</item>
        <item name="box">@drawable/box</item>
        <item name="invisibleHint">@color/darkBackground</item>
        <item name="android:divider">@color/white</item>
        <item name="android:editTextColor">@color/white</item>
        <item name="buttonTextColor">@color/white</item>
    </style>

    <style name="lightTheme" parent="AppTheme">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:textColorHint">@color/darkGrey</item>
        <item name="android:colorBackground">@color/lightBackground</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="navButton">@mipmap/menu_icon_light</item>
        <item name="homeIcon">@mipmap/home</item>
        <item name="box">@drawable/box_light</item>
        <item name="invisibleHint">@color/lightBackground</item>
        <item name="android:divider">@color/black</item>
        <item name="android:editTextColor">@color/black</item>
        <item name="buttonTextColor">@color/white</item>
    </style>

    <style name="spinnerTheme" parent="android:style/Widget.Holo.Light.Spinner">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TimePickerTheme" parent="android:Widget.Material.Light.TimePicker">
        <item name="android:timePickerStyle">@style/TimePickerDialogStyle</item>
        <item name="android:background">@color/lightBackground</item>
        <item name="android:numbersBackgroundColor">#DDDDDD</item>
        <item name="android:numbersTextColor">@color/black</item>
        <item name="android:amPmTextColor">@color/black</item>
    </style>

    <style name="TimePickerDialogStyle" parent="@android:style/Widget.Material.Light.TimePicker">
        <item name="colorAccent">#ff2d6073</item>
        <item name="android:timePickerMode">spinner</item>
        <item name="android:headerBackground">#ff2d6073</item>
        <item name="android:headerTimeTextAppearance">@style/TextAppearance.TimePickerDialogStyle.TimeLabel</item> <!-- TimePicker Time *TextAppearance* -->
        <item name="android:numbersSelectorColor">#ff2d6073</item>
    </style>

    <style name="TextAppearance.TimePickerDialogStyle.TimeLabel" parent="@android:style/TextAppearance.Material">
        <item name="android:textSize">60sp</item> <!-- from -->
        <item name="android:textColor">#ffD0D102</item>
    </style>

    <style name="DatePickerTheme" parent="android:Widget.Material.Light.DatePicker">
        <item name="android:datePickerMode">calendar</item>
        <item name="android:timePickerStyle">@style/TimePickerDialogStyle</item>
        <item name="android:numbersBackgroundColor">#262626</item>
        <item name="android:numbersTextColor">#FFFFFF</item>
    </style>

    <style name="DialogTheme" parent="android:Theme.Dialog">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:editTextColor">@color/black</item>
        <item name="android:textColorTertiary">@color/black</item>
        <item name="android:titleTextColor">@color/black</item>
        <item name="android:background">@color/white</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:editTextStyle">@style/editTextTheme</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="HoloButtonDark" parent="android:Widget.Holo.Button.Borderless">
        <item name="android:background">@drawable/box</item>
    </style>

    <style name="editTextTheme" parent="android:Widget.EditText">
        <item name="android:textColor">@color/black</item>
        <item name="android:numbersTextColor">@color/black</item>
    </style>

    <style name="textViewTheme" parent="android:TextAppearance.Widget.TextView">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="spinnerItemStyle" parent="android:Widget.TextView.SpinnerItem">

    </style>

    <style name="spinnerDropDownItemStyle" parent="android:TextAppearance.Widget.TextView.SpinnerItem">

    </style>

    <style name="darkTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="darkTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>