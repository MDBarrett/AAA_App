<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".JobSheetFragmentFinalize">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:clickable="false">

        <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:clickable="false">

        <ImageButton
            android:id="@+id/navButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:scaleType="centerCrop"
            android:background="@null"
            app:srcCompat="?attr/navButton"
            android:contentDescription="@string/navButtonCD"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginStart="15dp"
                android:textSize="28sp"
                android:text="@string/jobNoTV"/>

            <TextView
                android:id="@+id/jobNoTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginStart="10dp"
                android:textSize="28sp"/>

    </LinearLayout> <!-- nav button -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:clickable="false">

            <TextView
                android:id="@+id/startTimeTV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingStart="50dp"
                android:paddingEnd="50dp"
                android:paddingTop="30dp"
                android:text="@string/startTimeTV"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/endTimeTV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingStart="50dp"
                android:paddingEnd="50dp"
                android:paddingTop="30dp"
                android:text="@string/endTimeTV"
                android:textSize="20sp" />

        </LinearLayout> <!-- start time and end time -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:clickable="false">

            <TimePicker
                android:id="@+id/startTimeTP"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="10dp">

            </TimePicker>

            <TimePicker
                android:id="@+id/endTimeTP"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="10dp">

            </TimePicker>

        </LinearLayout> <!-- timePickers -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:clickable="false">

            <DatePicker
                android:id="@+id/dateDP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleX=".9"
                android:scaleY=".9"
                android:datePickerMode="spinner"
                android:calendarViewShown="false"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/totalTimeTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="15dp"
                    android:paddingTop="30dp"
                    android:text="@string/totalTimeTV"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/totalHoursText"
                    android:hint="@string/totalTime"
                    android:textColorHint="?attr/invisibleHint"
                    android:paddingTop="30dp"
                    android:layout_marginEnd="15dp"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:focusableInTouchMode="false"
                    android:gravity="center"
                    android:inputType="text"/>

                </LinearLayout>

        </LinearLayout> <!-- datePicker -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:padding="15dp">

            <Button
                android:id="@+id/signButton"
                style="?android:attr/borderlessButtonStyle"
                android:background="@drawable/box"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_weight="1"
                android:text="@string/signBtn"/>

            <Button
                android:id="@+id/submitButton"
                style="?android:attr/borderlessButtonStyle"
                android:background="@drawable/box"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:text="@string/submitBtn"/>

        </LinearLayout> <!-- submit button -->

    </LinearLayout>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        app:itemBackground="@color/colorAccent"
        app:itemIconTint="@drawable/nav_item_color_state"
        app:itemTextColor="@drawable/nav_item_color_state"
        app:menu="@menu/bottom_navigation_main" /> <!-- navigation bar -->

</RelativeLayout>